    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary"})
</p>
<table class="table table-bordered movies-table" id="movies">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Release Date</th>
            <th>Number in stock</th>
            <th>Genre</th>
            <th>Controls</th>
        </tr>
    </thead>
