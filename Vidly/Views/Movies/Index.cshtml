@section Scripts 
{
    <script>
        $(document).ready(function () {
            //$(".movies-table").DataTable();

            var table =$(".movies-table").DataTable({
                ajax:
                {
                    url: "http://localhost/Vidly/api/movies",
                    dataSrc: ""
                },

                columns:
                    [
                        {
                            data: "name"
                        },
                        {
                            data: "releaseDate"
                        },
                        {
                            data: "numberInStock"
                        },
                        {
                            data: "genre.name"
                        },
                        {
                            data: "id",
                            render: function (data, type, movie) {
                                return "<button class='btn-link js-delete' data-delete-movie='" + data + "'>Delete</button>";
                            }
                        }
                    ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("are you sure to delete", function (result) {
                    console.log("/Vidly/api/movies/" + $(".js-delete").attr("data-delete-movie"));
                    if (result) {
                        $.ajax({
                            url: "/Vidly/api/movies/" + $(".js-delete").attr("data-delete-movie"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })
                    }
                });
            });
        });
    </script>
}