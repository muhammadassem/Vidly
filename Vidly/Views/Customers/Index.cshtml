@section scripts
{
    <script>
        // render datatable on the client not server
        $(document).ready(function () {
            var table = $(".customer-table").DataTable(
                {
                    ajax:
                    {
                        url: "http://localhost/Vidly/api/customers",
                        dataSrc: ""
                    },
                    columns:
                        [
                            {
                                data: "name",
                                render: function (data, type, customer) {
                                    return "<a href='/vidly/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                                }
                            },
                            {
                                data: "membershipType.name"
                            },
                            {
                                data: "id",
                                render: function (data) {
                                    console.log(data);
                                    return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                                }
                            }
                        ]
                }
            );

            $("#customers").on("click", ".js-delete", function () {
                console.log('delete');
                var button = $(this);
                bootbox.confirm("are you sure to delete", function (result) {
                    if (result) {
                        $.ajax({
                            url: "http://localhost/Vidly/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                                // this will delete the row from the internal list of datatable .. not only from dom
                            }
                        });
                    }
                })
            })
        });
    </script>
}