<p>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class="btn btn-primary btn-outline-primary"})
</p>
<table class="table table-bordered customer-table" id="customers">
    <thead>
        <tr>
            <th>Name</th>
            <th>MemberShip Type</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @*@if (Model.Count() == 0)
