@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary"})
</p>
<table class="table table-bordered movies-table">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Controls</th>
        </tr>
    </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td><button class="btn-link delete-movie" id="delete-movie" data-delete-movie="@movie.Id">Delete</button></td>
            </tr>
            }
        </tbody>
</table>

@section Scripts 
{
    <script>
        $(document).ready(function () {
            $(".movies-table").DataTable();

            $(".delete-movie").on("click", function () {
                bootbox.confirm("are you sure to delete", function (result) {
                    if (result) {
                        var movie = $(this).parents("tr");
                        $.ajax({
                            url: "/api/movies/" + $("#delete-movie").attr("data-delete-movie"),
                            method: "DELETE",
                            success: function () {
                               console.log("Deleted");
                               movie.remove();
                            }
                        })
                    }
                });
            });
        });
    </script>
}