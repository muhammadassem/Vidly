@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "CustomerView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class="btn btn-primary btn-outline-primary"})
</p>
<table class="table table-bordered customer-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Discount Rate</th>
            <th>MemberShip Type</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">we don't have any customer yet. </td>
            </tr>
        }
        else
        {

            foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.DiscountRate</td>
                    <td>@customer.MembershipType.Name</td>
                    <td><button class="btn-link delete-customer" data-customer-id="@customer.Id">Delete</button></td>
                </tr>
            }
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".customer-table").DataTable();
            $(".delete-customer").on("click", function () {
                var button = $(this);
                bootbox.confirm("are you sure to delete", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                })
            })
        });
    </script>
}